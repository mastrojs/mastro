{
  "name": "@mastrojs/mastro",
  "version": "0.5.0",
  "tasks": {
    "publish": "deno test src && deno bench src && deno publish"
  },
  "exports": {
    ".": "./src/core/index.ts",
    "./generator": "./src/generator.ts",
    "./html": "./src/core/html.ts",
    "./server": "./src/server.ts"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
  },
  "lint": {
    "rules": {
      "exclude": ["no-process-global"]
    }
  },
  "fmt": {
    "lineWidth": 100
  },
  "imports": {
    "@std/media-types": "jsr:@std/media-types@^1.1.0",
    "@std/http": "jsr:@std/http@^1.0.19",
    "ts-blank-space": "npm:ts-blank-space@0.6.1"
  }
}
