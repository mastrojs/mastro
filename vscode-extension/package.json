{
  "name": "mastro-vscode-extension",
  "displayName": "Mastro",
  "description": "Build static websites in your browser using vscode.dev or github.dev",
  "icon": "icon.png",
  "version": "0.15.0",
  "publisher": "mastro",
  "repository": {
    "url": "https://github.com/mastrojs/mastro.git",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other",
    "Education"
  ],
  "browser": "./out/extension.js",
  "files": [
    "LICENSE.md",
    "icon.png",
    "package.json",
    "README.md",
    "out/extension.js"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mastro.preview",
        "title": "Preview and Generate Website",
        "category": "mastro"
      }
    ]
  },
  "scripts": {
    "open-in-browser": "npm run build-dev; vscode-test-web --open-devtools --extensionDevelopmentPath=. ../examples/hello-world/",
    "package": "npx @vscode/vsce package",
    "publish": "npx @vscode/vsce publish minor",
    "vscode:prepublish": "npm run build",
    "build": "tsc -p .",
    "build-dev": "tsc -p . && tsc ../src/core/*.ts ../src/generator.ts ../../markdown/markdown.ts ../../images/images.ts --outDir mastro --target esnext --rewriteRelativeImportExtensions || true",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@vscode/test-web": "*",
    "typescript": "^5.9.3"
  },
  "volta": {
    "node": "24.9.0"
  }
}
