{
  "name": "mastro-ssg-vscode-extension",
  "displayName": "Mastro SSG (static site generation)",
  "description": "Build static websites in your browser using vscode.dev or github.dev",
  "icon": "",
  "version": "0.0.1",
  "repository": {
    "url": "https://github.com/mb21/mastro.git",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "browser": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mastro.preview",
        "title": "Preview and Generate Website",
        "category": "mastro"
      }
    ]
  },
  "scripts": {
    "open-in-browser": "npm run build; vscode-test-web --extensionDevelopmentPath=. ../examples/hello-world/",
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./ && tsc ../src/*.ts --outDir mastro --target esnext --rewriteRelativeImportExtensions",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@vscode/test-web": "*",
    "typescript": "^5.7.2"
  },
  "volta": {
    "node": "23.5.0"
  }
}
